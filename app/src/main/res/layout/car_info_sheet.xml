<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nav_home"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="10dp">


    <LinearLayout
        android:layout_width="401dp"
        android:layout_height="240dp"
        android:orientation="vertical">


        <View
            android:layout_width="70dp"
            android:layout_height="5dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/deleteCar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:clickable="true"
                android:src="@drawable/ic_baseline_delete_24"/>

            <TextView
                android:id="@+id/regNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="75dp"
                android:text="RegNumber"
                android:textColor="@android:color/black"
                android:textSize="35dp"
                android:textStyle="bold" />
        </LinearLayout>
        <TextView
            android:id="@+id/manufacturer_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Bil bilesen"
            android:textSize="25dp" />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"    android:orientation="horizontal">
        <TextView
            android:id="@+id/fuelType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:text="Petrol"
            android:onClick="onClick"
            android:clickable="true"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/fuelUsage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="0.69"
            android:onClick="onClick"
            android:clickable="true"
            android:textSize="25dp" />
</LinearLayout>




    </LinearLayout>
</RelativeLayout>