<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_home"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:background="@color/background"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="69dp"
            android:layout_height="6dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginStart="160dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="162dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/Heading_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:text="Register Car"
            android:textColor="@android:color/white"
            android:textSize="32dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/RegNumber_field"
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="60dp"
            android:layout_marginTop="102dp"
            android:layout_marginEnd="158dp"
            android:ems="10"
            android:hint="Regnumber"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:inputType="text" />

        <Button
            android:id="@+id/Search_car_button"
            android:layout_width="78dp"
            android:layout_height="38dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="107dp"
            android:layout_marginEnd="60dp"
            android:text="Search"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/Field_manufacturer"
            android:layout_width="271dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="60dp"
            android:layout_marginTop="160dp"
            android:layout_marginEnd="60dp"
            android:ems="10"
            android:hint="Manufacturer"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:inputType="text" />

        <EditText
            android:id="@+id/Field_model"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="60dp"
            android:layout_marginTop="215dp"
            android:layout_marginEnd="60dp"
            android:ems="10"
            android:hint="Model"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:inputType="text" />

        <RadioGroup
            android:id="@+id/RadioGroup"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="130dp"
            android:layout_marginTop="325dp"
            android:layout_marginEnd="130dp">

            <RadioButton
                android:id="@+id/Petrol_radio"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Petrol"
                tools:layout_editor_absoluteX="144dp"
                tools:layout_editor_absoluteY="494dp"
                android:textColor="@color/white"
                android:buttonTint="@color/white"/>

            <RadioButton
                android:id="@+id/Diesel_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diesel"
                tools:layout_editor_absoluteX="144dp"
                tools:layout_editor_absoluteY="526dp"
                android:textColor="@color/white"
                android:buttonTint="@color/white"/>
        </RadioGroup>

        <Button
            android:id="@+id/Register_car_button"
            android:layout_width="211dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="101dp"
            android:layout_marginTop="400dp"
            android:layout_marginEnd="101dp"
            android:background="@android:color/holo_red_light"
            android:text="Add car" />

        <EditText
            android:id="@+id/Field_fuelUsage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="60dp"
            android:layout_marginTop="270dp"
            android:layout_marginEnd="148dp"
            android:ems="10"
            android:hint="Fuel Usage"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="251dp"
            android:layout_marginTop="283dp"
            android:layout_marginEnd="60dp"
            android:text="l/10km"
            android:textColor="@color/white"
            android:textSize="13dp" />


    </RelativeLayout>
</RelativeLayout>