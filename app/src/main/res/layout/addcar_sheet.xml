<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_home"
    android:layout_width="match_parent"
    android:layout_height="450dp"
    android:background="@color/white"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="69dp"
            android:layout_height="6dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginStart="160dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="162dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/tvStationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="99dp"
            android:text="Register Car"
            android:textColor="@android:color/black"
            android:textSize="35dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/RegNumber_field"
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="62dp"
            android:layout_marginTop="102dp"
            android:layout_marginEnd="158dp"
            android:ems="10"
            android:hint="Regnumber"
            android:inputType="textEmailAddress" />

        <Button
            android:id="@+id/search_car_button"
            android:layout_width="78dp"
            android:layout_height="38dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="107dp"
            android:layout_marginEnd="60dp"
            android:text="Search"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/field_manufacturer"
            android:layout_width="271dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="63dp"
            android:layout_marginTop="167dp"
            android:layout_marginEnd="60dp"
            android:ems="10"
            android:hint="Manufacturer"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/field_model"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="62dp"
            android:layout_marginTop="224dp"
            android:layout_marginEnd="60dp"
            android:ems="10"
            android:hint="Model"
            android:inputType="textEmailAddress" />

        <RadioGroup
            android:id="@+id/RadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="150dp"
            android:layout_marginTop="286dp"
            android:layout_marginEnd="150dp">

            <RadioButton
                android:id="@+id/petrol_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Petrol"
                tools:layout_editor_absoluteX="144dp"
                tools:layout_editor_absoluteY="494dp" />

            <RadioButton
                android:id="@+id/diesel_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diesel"
                tools:layout_editor_absoluteX="144dp"
                tools:layout_editor_absoluteY="526dp" />
        </RadioGroup>

        <Button
            android:id="@+id/register_car_button"
            android:layout_width="211dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="101dp"
            android:layout_marginTop="362dp"
            android:layout_marginEnd="101dp"
            android:background="@android:color/holo_red_light"
            android:text="Add car" />


    </RelativeLayout>
</RelativeLayout>